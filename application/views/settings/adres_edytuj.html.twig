{# views/settings/adres_edytuj.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
	{% include 'page/alerts.html.twig' %}
	<div class="container-fluid">
		<h1>Edytuj adres</h1>
		{% if address_edited %}
			<form method="post">
				<input id="addressID" name="addressID" value="{{ address_edited.id_address }}" hidden>
				<div class="form-group">
					<label for="name">Nazwa (Nazwisko Imię lub Nazwa firmy)</label>
					<input type="text" class="form-control" id="name" name="name" placeholder="{{ address_edited.name }}">
				</div>
				<div class="form-group">
					<label for="city">Miasto</label>
					<input type="text" class="form-control" id="city" name="city" placeholder="{{ address_edited.city }}">
				</div>
				<div class="form-group">
					<label for="street">Ulica</label>
					<input type="text" class="form-control" id="street" name="street" placeholder="{{ address_edited.street }}">
				</div>
				<div class="form-group">
					<label for="home">Numer domu/ lokalu</label>
					<input type="text" class="form-control" id="home" name="home" placeholder="{{ address_edited.home }}">
				</div>
				<div class="form-group">
					<label for="postal_code">Kod pocztowy</label>
					<input type="text" class="form-control" id="postal_code" name="postal_code" placeholder="{{ address_edited.postal_code }}">
				</div>
				<div class="form-group">
					<label for="main_address">Adres główny?</label>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="main_address" id="main_address" value="0" {% if address_edited.main_address == 0 %}checked{% endif %}>
						<label class="form-check-label" for="main_address">Nie</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="main_address" id="main_address" value="1" {% if address_edited.main_address == 1 %}checked{% endif %}>
						<label class="form-check-label" for="main_address">Tak</label>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Zatwierdź</button>
			</form>
		{% endif %}
	</div>
	<hr/>
	<a href="{{ base_url('ustawienia/index') }}" role="button" class="btn btn-primary btn-sm">Ustawienia <i class="fas fa-cogs"></i></a>
	<a href="{{ base_url('ustawienia/adresy') }}" role="button" class="btn btn-primary btn-sm">Moje adresy <i class="fas fa-address-card"></i></a>
	<a href="{{ base_url('ustawienia/adres_dodaj') }}" role="button" class="btn btn-primary btn-sm">Dodaj adres <i class="fas fa-plus-circle"></i></a>
	{% if address_edited.main_address == 0 %}<form action="{{ base_url('ustawienia/adres_edytuj/') }}{{ id_address }}" method="post"><input id="addressID" name="addressID" value="{{ id_address }}" hidden><input id="main_address" name="main_address" value="1" hidden><button type="submit" class="btn btn-primary btn-sm">Ustaw jako główny <i class="fas fa-home"></i></button></form>{% endif %}
	<form action="{{ base_url('ustawienia/adres_usun/') }}{{ address_edited.id_address }}" method="post"><input id="addressID" name="addressID" value="{{ address_edited.id_address }}" hidden><button type="submit" class="btn btn-primary btn-sm">Usuń <i class="fas fa-minus-circle"></i></button></form>
{% endblock %}
