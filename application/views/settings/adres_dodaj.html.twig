{# views/users/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
	{% include 'page/alerts.html.twig' %}
	<div class="container">
		<form method="post">
			<div class="form-group">
				<label for="city">Miasto</label>
				<input type="text" class="form-control" id="city" name="city" placeholder="Nazwa miejscowości" required>
			</div>
			<div class="form-group">
				<label for="street">Ulica</label>
				<input type="text" class="form-control" id="street" name="street" placeholder="Nazwa ulicy" required>
			</div>
			<div class="form-group">
				<label for="home">Numer domu/ lokalu</label>
				<input type="text" class="form-control" id="home" name="home" placeholder="Nr domu/ lokalu" required>
			</div>
			<div class="form-group">
				<label for="postal_code">Kod pocztowy</label>
				<input type="text" class="form-control" id="postal_code" name="postal_code" placeholder="Kod pocztowy" required>
			</div>
			<div class="form-group">
				<label for="main_address">Adres główny?</label>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="main_address" id="main_address" value="0" checked>
					<label class="form-check-label" for="main_address">Nie</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="main_address" id="main_address" value="1">
					<label class="form-check-label" for="main_address">Tak</label>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Zatwierdź</button>
		</form>
	</div>
	<hr/>
	<a href="{{ base_url('ustawienia/index') }}" role="button" class="btn btn-primary btn-sm">Ustawienia <i class="fas fa-cogs"></i></a>
	<a href="{{ base_url('ustawienia/adresy') }}" role="button" class="btn btn-primary btn-sm">Moje adresy <i class="fas fa-address-card"></i></a>
{% endblock %}
